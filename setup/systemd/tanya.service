[Unit]
Description=Tanya - AI Assistant with Active Learning
After=network.target ollama.service
Requires=ollama.service

[Service]
Type=simple
User=kalguy
WorkingDirectory=/home/kalguy/Tanya
Environment="OLLAMA_URL=http://localhost:11434"
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/python3 /home/kalguy/Tanya/main.py
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/home/kalguy/Tanya/tanya.log
StandardError=append:/home/kalguy/Tanya/tanya.err.log

[Install]
WantedBy=multi-user.target
